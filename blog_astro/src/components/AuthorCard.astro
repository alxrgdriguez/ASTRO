---
import type { CollectionEntry } from "astro:content";

export interface Props {
  author: CollectionEntry<"author">;
}

const { author } = Astro.props;
---

<div class="max-w-lg mx-auto my-10 bg-white rounded-lg shadow-md p-5">
  <img
    class="w-32 h-32 rounded-full mx-auto"
    src={author.data.avatar.src}
    alt={`Avatar de ${author.data.name}`}
  />
  <h2 class="text-center text-2xl font-semibold mt-3">{author.data.name}</h2>
  <p class="text-center text-gray-600 mt-1">{author.data.subtitle}</p>

  <div class="flex justify-center mt-5 gap-2.5">
    <a
      href="https://x.com/?lang=es"
      style="color: rgb(64, 64, 214)"
      target="_blank">Twitter</a
    >
    <a
      href="https://es.linkedin.com/"
      style="color: rgb(64, 64, 214)"
      target="_blank">LinkedIn</a
    >
    <a
      href="https://github.com/"
      style="color: rgb(64, 64, 214)"
      target="_blank">GitHub</a
    >
  </div>

  <div class="mt-5">
    <h3 class="text-xl font-semibold">Bio</h3>
    <p class="text-gray-600 mt-2">{author.data.bio}</p>
    <div class="mt-5 flex justify-end">
      <a style="color: black;" href={`/blog/${author.id}`}>Leer MÃ¡s</a>
    </div>
  </div>
</div>
